  
  <div id="photo-map" style="width: 100%; height: 400px">
     </div>
      <script>
     // set default view 
      if (gon.exif.length == 0){
       var map = L.map('photo-map').setView([16.826,96.1551], 13);
      }
      else{
        var last_photo = gon.exif[gon.exif.length -1]
        var map = L.map('photo-map').setView([last_photo[0], last_photo[1]], 14);
        }   

    L.tileLayer('http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    for (i=0; i<gon.exif.length; i++){
      L.marker([gon.exif[i][0],gon.exif[i][1]]).bindPopup("<p>"+gon.exif[i][2]+"</p><img src="+gon.exif[i][3]+">").addTo(map);
    }
    map.scrollWheelZoom.disable();

    </script>
